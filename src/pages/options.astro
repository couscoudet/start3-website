---
import Layout from "../layouts/Start3Layout.astro";
import Header from "../components/start3/Header.astro";
import OptionSection from "../components/start3/OptionSection.astro";
import Footer from "../components/start3/Footer.astro";
---

<Layout
  title="Start3 - Votre présence web en 3 jours pour 500€"
  canonical="https://start3.tech-talent.fr/options"
>
  <div class="page-wrapper">
    <Header />
    <div class="header-margin"></div>
    <OptionSection />
    <Footer />
  </div>
</Layout>

<style>
  .page-wrapper {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  .header-margin {
    height: 140px;
  }
</style>
