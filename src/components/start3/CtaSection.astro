<script>
  // Gestion améliorée du formulaire avec envoi à webhook n8n
  document.addEventListener("DOMContentLoaded", () => {
    const form = document.getElementById("rdv-form") as HTMLFormElement;
    const formSuccess = document.getElementById("form-success");
    const formError = document.getElementById("form-error");

    // URL de votre webhook n8n - À REMPLACER par votre URL réelle
    const webhookUrl =
      "https://n8n.tech-talent.fr/webhook/1e92f09e-47c3-4f4a-a8f0-e89828b66c08";

    if (form) {
      form.addEventListener("submit", async (e) => {
        e.preventDefault();

        // Vérification du consentement RGPD
        const consentChecked = (
          document.getElementById("consent") as HTMLInputElement
        ).checked;
        if (!consentChecked) {
          alert(
            "Vous devez accepter la collecte de vos données pour soumettre le formulaire."
          );
          return;
        }

        // Affichage de l'état de chargement
        form.classList.add("form-loading");

        // Récupération des données du formulaire
        const formData = new FormData(form);
        const formDataObj: Record<string, string> = {};

        // Conversion des données du formulaire en objet
        formData.forEach((value, key) => {
          formDataObj[key] = value.toString();
        });

        // Ajout de la date et heure de soumission
        formDataObj.dateSubmission = new Date().toISOString();
        formDataObj.source = "site-web";

        try {
          // Envoi des données au webhook n8n
          const response = await fetch(webhookUrl, {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify(formDataObj),
          });

          // Vérification de la réponse
          if (response.ok) {
            // Affichage du message de succès
            if (formSuccess) formSuccess.style.display = "block";
            if (formError) formError.style.display = "none";

            // Réinitialisation du formulaire
            form.reset();

            // Ajout des données dans le stockage local pour suivi RGPD
            // Stocke uniquement l'horodatage et un identifiant anonymisé
            const submissionLog = JSON.parse(
              localStorage.getItem("formSubmissions") || "[]"
            );
            submissionLog.push({
              timestamp: new Date().toISOString(),
              // Création d'un identifiant anonymisé basé sur l'email et la date
              // Ne stocke pas les données personnelles dans localStorage
              submissionId: btoa(`${formDataObj.email}-${Date.now()}`).slice(
                0,
                10
              ),
            });
            localStorage.setItem(
              "formSubmissions",
              JSON.stringify(submissionLog)
            );

            // Cache le message de succès après 5 secondes
            setTimeout(() => {
              if (formSuccess) formSuccess.style.display = "none";
            }, 150000);
          } else {
            throw new Error("Erreur lors de l'envoi du formulaire");
          }
        } catch (error) {
          console.error("Erreur:", error);

          // Affichage du message d'erreur
          if (formError) formError.style.display = "block";
          if (formSuccess) formSuccess.style.display = "none";

          // Cache le message d'erreur après 5 secondes
          setTimeout(() => {
            if (formError) formError.style.display = "none";
          }, 15000);
        } finally {
          // Suppression de l'état de chargement
          form.classList.remove("form-loading");
        }
      });
    }

    // Ajout de la validation en temps réel du formulaire
    const inputs = form?.querySelectorAll(
      "input[required], textarea[required]"
    );
    inputs?.forEach((input) => {
      input.addEventListener("blur", () => {
        if ((input as HTMLInputElement).value.trim() === "") {
          input.classList.add("input-error");
          input.setAttribute("aria-invalid", "true");
        } else {
          input.classList.remove("input-error");
          input.removeAttribute("aria-invalid");
        }
      });
    });
  });
</script>
