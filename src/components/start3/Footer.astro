---
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-logo">
        <span class="logo-text">WebAgency</span>
        <span class="logo-accent">Start<span class="number-3">3</span></span>
      </div>
      
        
        <div class="footer-column">
          <h4>Contact</h4>
          <ul>
            <li>confirmation@tech-talent.fr</li>
            <li>110 rue du reveil matin<br>78800 Houilles</li>
          </ul>
        </div>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; {currentYear} Start3. Tous droits réservés.</p>
      <div class="footer-legal">
        <a href="/mentions-legales">Mentions légales</a>
        <a href="/privacy-policy">Politique de confidentialité</a>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-secondary);
    color: var(--color-white);
    padding: 60px 0 24px;
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    margin-bottom: 48px;
  }

  .footer-logo {
    display: flex;
    flex-direction: column;
    font-weight: 600;
    font-size: 1.2rem;
    color: var(--color-white);
    line-height: 1;
  }

  .logo-text {
    font-size: 0.9em;
    opacity: 0.8;
  }

  .logo-accent {
    color: var(--color-primary);
    font-size: 1.2em;
  }

  .footer-links {
    display: flex;
    gap: 48px;
  }

  .footer-column h4 {
    color: var(--color-white);
    margin-bottom: 16px;
    font-size: 1.1rem;
  }

  .footer-column ul {
    list-style: none;
    padding: 0;
  }

  .footer-column li {
    margin-bottom: 8px;
  }

  .footer-column a {
    color: rgba(255, 255, 255, 0.8);
  }

  .footer-column a:hover {
    color: var(--color-primary);
  }

  .footer-bottom {
    padding-top: 24px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-bottom p {
    margin: 0;
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.6);
  }

  .footer-legal {
    display: flex;
    gap: 16px;
  }

  .footer-legal a {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.6);
  }

  .footer-legal a:hover {
    color: var(--color-primary);
  }

  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      gap: 32px;
    }
    
    .footer-links {
      flex-direction: column;
      gap: 24px;
    }
    
    .footer-bottom {
      flex-direction: column;
      gap: 16px;
      text-align: center;
    }
  }
</style>